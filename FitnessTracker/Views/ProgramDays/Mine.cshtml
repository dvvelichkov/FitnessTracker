@model IEnumerable<ProgramDayListViewModel>

   @foreach (var programDay in Model)
{
    <h2>Program day name:</h2>
    <h4>@programDay.Name</h4>
    <button class="btn btn-danger" role="button" asp-area="" asp-controller="ProgramDays" asp-action="Edit">Edit</button>
    <button class="btn btn-danger" role="button" asp-area="" asp-controller="ProgramDays" asp-action="Delete">Delete</button>
    <br>
    <h4>Exercises:</h4>
    @foreach (var exercise in programDay.Exercises)
    {
        <ul class="list-group">
            <li class="list-group-item">@exercise.ExerciseName - @exercise.ExerciseSets sets @exercise.ExerciseReps reps at @exercise.ExerciseWeight</li>
        </ul>
    }
}
