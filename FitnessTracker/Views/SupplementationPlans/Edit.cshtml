@model CreateSupplementationPlanViewModel

@{
    ViewData["Title"] = "Edit Supplementation Plan";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 offset-lg-4 ">
            <h2 class="text-center">Edit Supplementation Plan</h2>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Supplementation plan name...">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>
                <h5>Add supplements to the supplementation plan:</h5>

                <div class="form-group mb-3">
                    <table>
                        @for (int i = 0; i < Model.Supplements.Capacity; i++)
                        {
                            <tr>
                                <td>
                                    @Html.CheckBoxFor(it => Model.Supplements[i].IsChecked, new { Style = "vertical" })
                                </td>
                                <td>
                                    @Html.HiddenFor(x=> Model.Supplements[i].Id)
                                    @Html.DisplayFor(it=> Model.Supplements[i].Name):
                                    @Html.DisplayFor(it => Model.Supplements[i].Quantity)
                                </td>

                            </tr>
                        }
                    </table>
                </div>
                <input class="btn btn-success" type="submit" value="Edit" role="button" asp-area="" asp-controller="SupplementationPlans" asp-action="Edit"></input>
            </form>
        </div>
    </div>
</div>
