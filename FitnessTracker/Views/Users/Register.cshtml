@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 offset-lg-4 " >
            <h2 class="text-center">Register</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label">Full Name</label>
                    <input asp-for="FullName" class="form-control">
                    <span asp-validation-for="FullName" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" rows="4" class="form-control">
                    <span asp-validation-for="Email" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password">
                    <span asp-validation-for="Password" class="small text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password">
                    <span asp-validation-for="ConfirmPassword" class="small text-danger"></span>
                </div>
                <input class="btn btn-success" type="submit" value="Register">
            </form>
        </div>
    </div>
</div>
